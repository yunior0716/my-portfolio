---
import ThemeToggle from './ThemeToggle.astro';
---

<header
  class={`
    flex justify-center items-center
    mx-auto
    py-5
    sticky top-0
    w-full
    z-10
  `}
>
  <nav
    class={`
      border border-[#E3E3F3] rounded-full
      bg-[#E3E3F3]/90
      px-3 py-1
      flex items-center
      backdrop-blur-2xl
      dark:bg-[#202030]/90
      dark:border-[#202030]
      text-sm
      md:text-base
    `}
  >
    <a
      class="hover:bg-black/10 rounded-full px-2 md:px-3 transition dark:hover:bg-white/10"
      href="#inicio">Inicio</a
    >
    <a
      class="hover:bg-black/10 rounded-full px-2 md:px-3 transition dark:hover:bg-white/10"
      href="#experiencia">Experiencia</a
    >
    <a
      class="hover:bg-black/10 rounded-full px-2 md:px-3 transition dark:hover:bg-white/10"
      href="#proyectos">Proyectos</a
    >

    <a
      class="hover:bg-black/10 rounded-full px-2 md:px-3 transition dark:hover:bg-white/10"
      href="#contacto">Contacto</a
    >

    <ThemeToggle />
  </nav>
</header>
