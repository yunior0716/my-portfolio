---
interface Props {
  title: string;
  description: string;
  date: string;
}

const { title, description, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-secondary-text rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900"
>
</div>

<h3 class="text-xl font-semibold text-secondary-text/90 mt-2">
  {title}
</h3>

<time class="text-sm font-normal leading-none text-accent">{date}</time>

<p class="mb-4 mt-1.5 text-base font-normal text-pretty">
  {description}
</p>
