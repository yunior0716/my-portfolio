<form
  name="contact"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="max-w-xl"
  action="/confirmation"
>
  <label for="fullName" class="block mb-2 text-sm font-medium">Nombre</label>
  <input
    type="text"
    id="fullName"
    name="fullName"
    class="border text-sm rounded-lg block w-full p-2.5
  bg-black/20 border-black/40 placeholder:text-black/40
  dark:bg-slate-700 dark:border-slate-600 dark:placeholder-slate-400 mb-6
  focus:outline-none focus:border-indigo-600/70 dark:focus:border-indigo-800/80"
    placeholder="Ingrese su nombre completo..."
    required
  />

  <label for="email" class="block mb-2 text-sm font-medium">Email</label>
  <input
    type="email"
    id="email"
    name="email"
    class="border text-sm rounded-lg block w-full p-2.5
  bg-black/20 border-black/40 placeholder:text-black/40
  dark:bg-slate-700 dark:border-slate-600 dark:placeholder-slate-400 mb-6
  focus:outline-none focus:border-indigo-600/70 dark:focus:border-indigo-800/80"
    placeholder="Ingrese su correo electrÃ³nico..."
    required
  />

  <label for="message" class="block mb-2 text-sm font-medium">Mensaje</label>
  <textarea
    id="message"
    name="message"
    rows="4"
    class="block p-2.5 w-full text-sm rounded-lg border resize-none
  bg-black/20 border-black/40 placeholder:text-black/40
  dark:bg-slate-700 dark:border-slate-600 dark:placeholder-slate-400 mb-6
  focus:outline-none focus:border-indigo-600/70 dark:focus:border-indigo-800/80"
    placeholder="Escriba su mensaje..."
    required></textarea>

  <!-- <div data-netlify-recaptcha="true"></div> -->

  <button
    type="submit"
    class="text-white bg-indigo-600 hover:bg-indigo-800
    focus:ring-4 focus:outline-none focus:ring-blue-300
    font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mt-1"
    >Submit</button
  >
</form>
