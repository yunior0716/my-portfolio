---
import ImageCarousel from './ImageCarousel.astro';
import { PROJECTS } from './ProjectList.astro';
---

{
  PROJECTS.map(({ link, image, title, description, tags }) => (
    <article class="mb-20">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>

      {image.length > 1 ? (
        <ImageCarousel>
          {image.map((img) => (
            <div class="" data-carousel-item="active">
              <img
                src={img}
                class="absolute block -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2  "
                alt="..."
              />
            </div>
          ))}
        </ImageCarousel>
      ) : (
        <img
          class="rounded shadow-2xl shadow-white/10 mb-8"
          src={image[0]}
          alt={`Captura de pantalla del proyecto ${title}`}
        />
      )}

      {link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-white/5 
          border dark:border-white/10 border-gray-300
          rounded-full
          inline-flex justify-center items-center gap-x-2
          py-1 px-2 md:py-2 md:px-4
          text-xs md:text-base
          transition
          hover:scale-110 hover:bg-white/10"
        >
          Ver sitio...{' '}
          <svg
            class="w-3 h-3 ms-2 rtl:rotate-180"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"
            />
          </svg>
        </a>
      )}
    </article>
  ))
}
